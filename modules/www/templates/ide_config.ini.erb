auth_module = ldap

ldap.ideuser.password = "<%= ide_ldap_pw %>"
ldap.host = localhost
ldap.team.prefix = "team-"
ldap.admin_group = "ide-admin"

log.level = LOG_NOTICE

keyfile = <%= ide_key_file %>

team.status_dir = <%= team_status_dir %>
team.status_images.dir = <%= team_status_imgs_dir %>

; Piwik
usage_tracking = <% if !devmode then lestring="true" else lestring="false" end%><%= lestring %>
; Show the ticket link
gui.ticket_link = false

announce.enabled = true

pylint.path = /usr/bin/pylint
python.path = /usr/bin/python
