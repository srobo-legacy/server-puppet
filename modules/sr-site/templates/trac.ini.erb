# -*- coding: utf-8 -*-

[attachment]
# max_size = 262144  # Changed by rbarlow on 02/04/2011
max_size = 2097152
max_zip_size = 2097152
render_unsafe_content = false

[browser]
downloadable_paths = /trunk, /branches/*, /tags/*
hide_properties = svk:merge
render_unsafe_content = false

[changeset]
max_diff_bytes = 10000000
max_diff_files = 0
wiki_format_messages = true

[components]
webadmin.basics.* = enabled
webadmin.logging.* = enabled
webadmin.perm.* = enabled
webadmin.plugin.* = enabled
webadmin.ticket.* = enabled
webadmin.web_ui.* = enabled
tracrpc.* = enabled
tracvote.* = enabled

[header_logo]
alt =
height = -1
link = https://<%= @www_canonical_hostname %>/trac
src = site/sr-trac.png
width = -1

[logging]
log_file = trac.log
log_level = WARN
log_type = file

[mimeviewer]
enscript_modes = text/x-dylan:dylan:4
enscript_path = enscript
max_preview_size = 262144
mime_map = text/x-dylan:dylan,text/x-idl:ice,text/x-ada:ads:adb
php_path = php
silvercity_modes =
tab_width = 8

[notification]
always_notify_owner = true
always_notify_reporter = true
always_notify_updater = true
mime_encoding = base64
smtp_always_bcc =
smtp_always_cc =
smtp_default_domain = studentrobotics.org
smtp_enabled = true
smtp_from = trac@studentrobotics.org
smtp_from_author = false
smtp_port = 25
smtp_replyto = trac@studentrobotics.org
smtp_server = <%= @trac_email_smtp %>
smtp_user = <%= @trac_email_user %>
smtp_password = <%= @trac_email_pw %>
smtp_subject_prefix = [srobo-trac]
use_public_cc = false
use_short_addr = false
use_tls = true

[project]
descr = Student Robotics Trac
footer = Visit the Student Robotics project at <br /><a href="https://<%= @www_canonical_hostname %>/">https://<%= @www_canonical_hostname %>/</a>
icon = common/trac.ico
name = Student Robotics
url = https://<%= @www_canonical_hostname %>/trac

[search]
min_query_length = 3

[ticket]
default_component =
default_milestone =
default_priority = major
default_type = task
default_version =
restrict_owner = false

[ticket-workflow]
accept = new -> assigned
accept.operations = set_owner_to_self
accept.permissions = TICKET_MODIFY
leave = * -> *
leave.default = 1
leave.operations = leave_status
reassign = new,assigned,reopened,release_pending -> new
reassign.operations = set_owner
reassign.permissions = TICKET_MODIFY
reopen = release_pending,closed -> reopened
reopen.operations = del_resolution
reopen.permissions = TICKET_CREATE
resolve = new,assigned,reopened,release_pending -> closed
resolve.operations = set_resolution
resolve.permissions = TICKET_MODIFY
fix_committed = new,assigned,reopened -> release_pending
fix_committed.operations = set_resolution
fix_committed.set_resolution = fixed
fix_committed.permissions = TICKET_MODIFY

[timeline]
changeset_long_messages = false
changeset_show_files = 0
default_daysback = 30
ticket_show_details = false

[trac]
authz_file =
authz_module_name =
base_url = https://<%= @www_canonical_hostname %>/trac
check_auth_ip = true
database = <%= @trac_db_string %>
default_charset = iso-8859-15
default_handler = WikiModule
htdocs_location =
ignore_auth_case = false
mainnav = wiki,timeline,roadmap,browser,tickets,newticket,search
metanav = login,logout,settings,help,about
permission_store = DefaultPermissionStore
#jmorse 13/11/12
#repository_dir = /srv/svn/sr
#repository_type = svn
timeout = 20

[wiki]
ignore_missing_pages = true
split_page_names = false

[vote]
paths = /ticket/*
